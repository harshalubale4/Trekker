<% layout("layouts/boilerplate") %>


    <h1 class="text-center display-4">
        Edit Trek Spot
    </h1>

    <div class="row">
        <div class="col-6 offset-3">
            <form action="/treks/<%= trek._id %>?_method=put" method="post" class="mb-3 validatedForm" novalidate
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">
                        Title
                    </label>
                    <input type="text" name="trek[title]" id="title" class="form-control" value="<%= trek.title %>"
                        required>
                    <div class="valid-feedback">
                        Theek ðŸ¤ 
                    </div>
                    <div class="invalid-feedback">
                        Kripaya Title Dalne Ka Kasht Kare
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="from-label">
                        Location
                    </label>
                    <input type="text" name="trek[location]" id="location" value="<%= trek.location %>"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Theek ðŸ¤ 
                    </div>
                    <div class="invalid-feedback">
                        Kripaya Location Dale
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="from-label">
                        Add Images
                    </label>
                    <div class="input-group">
                        <input type="file" class="form-control" id="image" aria-describedby="inputGroupFileAddon04" +
                            aria-label="Upload" name="image" multiple>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Trek Price</label>
                    <div class="input-group w-50">
                        <span class="input-group-text" id="price-label">ðŸ’°</span>
                        <input type="text" class="form-control" placeholder="0" aria-label="price-label"
                            name="trek[price]" aria-describedby="price-label" id="price" value="<%= trek.price%>"
                            required>
                        <div class="valid-feedback">
                            Theek ðŸ¤ 
                        </div>
                        <div class="invalid-feedback">
                            Kimat Daliye Janab
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="from-label">
                        Description
                    </label>
                    <textarea type="text" name="trek[description]" id="description" class="form-control "
                        required><%=trek.description %> </textarea>
                    <div class="valid-feedback">
                        Theek ðŸ¤ 
                    </div>
                    <div class="invalid-feedback">
                        Apne Ehesas Ke Bare Me Vistar Me Bataye
                    </div>
                </div>
                <div class="mb-3">
                    <% trek.images.forEach(function(img, i) { %>
                        <img src="<%=img.url %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete</label>
                        <% })%>
                </div>


                <button class="btn btn-info">Update Trek Spot</button>
            </form>
            <a href="/treks"><button class="btn btn-success">All Treks</button></a>
        </div>
    </div>