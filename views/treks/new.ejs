<% layout("layouts/boilerplate") %>
    <h1 class="text-center display-4">
        Create a New Trek Spot
    </h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/treks" method="post" class="mb-3">
                <div class="mb-3">
                    <label for="title" class="form-label">
                        Title
                    </label>
                    <input type="text" name="trek[title]" id="title" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="location" class="from-label">
                        Location
                    </label>
                    <input type="text" name="trek[location]" id="location" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="image" class="from-label">
                        Image URL
                    </label>
                    <input type="text" name="trek[image]" id="image" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Trek Price</label>
                    <div class="input-group w-50">
                        <span class="input-group-text" id="price-label">ðŸ’°</span>
                        <input type="text" class="form-control" placeholder="0" aria-label="price-label"
                            name="trek[price]" aria-describedby="price-label" id="price">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="from-label">
                        Description
                    </label>
                    <textarea type="text" name="trek[description]" id="description" class="form-control"></textarea>
                </div>
                <button class="btn btn-primary">Add Trek Spot</button>
            </form>
            <a href="/treks"><button class="btn btn-success">All Treks</button></a>
        </div>
    </div>